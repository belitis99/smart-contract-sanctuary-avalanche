import "ERC2771Context.sol";

import "ContextMixin.sol";
import "NativeMetaTransaction.sol";

contract Dummy {
    address public user;
    address public relay;
    address public addr;

    function changeAddress(address _address) public virtual {
        addr = _address;
        user = msg.sender;
        relay = msg.sender;
    }
}

contract DummyNative is Dummy, NativeMetaTransaction, ContextMixin {
    string public constant CONTRACT_NAME = "DummyNative";
    string public constant EIP712_VERSION = "1";

    constructor () {
        _setDomainSeparator(CONTRACT_NAME, EIP712_VERSION);
    }

    function changeAddress(address _address) public override {
        addr = _address;
        user = _msgSender();
        relay = msg.sender;
    }
}

contract Dummy2771 is Dummy, ERC2771Context {
    constructor(address trustedForwarder) ERC2771Context(trustedForwarder) {
    }

    function changeAddress(address _address) public override {
        addr = _address;
        user = _msgSender();
        relay = msg.sender;
    }
}

