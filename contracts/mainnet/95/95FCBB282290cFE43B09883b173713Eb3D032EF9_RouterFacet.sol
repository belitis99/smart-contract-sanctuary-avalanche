    function setFeeToken(address feeToken_, uint256 amount_) internal {
        Storage storage rs = routerStorage();

        rs.feeAmountByToken[feeToken_] = amount_;
        if(amount_ != 0) {
            rs.feeTokens.add(feeToken_);
        } else {
            rs.feeTokens.remove(feeToken_);
        }
    }

