import { IBond } from "@core/interfaces/IBond.sol";
import { IBondStorage } from "@core/interfaces/IBondStorage.sol";
import { Bond } from "@modules/Bond.sol";
import { IBondFactory } from "@core/interfaces/IBondFactory.sol";
import { PermissionsStorageMember } from "@core/PermissionsStorageMember.sol";

/**
 * @title BondMinter
 * @notice This smart contract is used for bond minting and storing related data to bond storage
 */
contract BondMinter is PermissionsStorageMember {
    address public bondStorageAddress;
    address public bondFactory;

    constructor(
        address _bondStorage,
        address _permissionsStorage,
        address _bondFactory
    ) PermissionsStorageMember(_permissionsStorage) {
        if (!hasAnyRole(_bondStorage, STORAGE_BONDS_ROLE())) revert Unauthorized(_bondStorage, STORAGE_BONDS_ROLE());
        bondStorageAddress = _bondStorage;
        bondFactory = _bondFactory;
    }

    ///@dev Function is minting the Bond and returning its address
    function mint(
        address _tempBondVault,
        uint256[] memory _data,
        string[] memory _data2,
        uint8[] memory _data3
    ) public onlyRoles(GAS_STATION_ROLE()) returns (address) {
        address tempBondVault = _tempBondVault;
        uint256[] memory data = _data;
        string[] memory data2 = _data2;
        uint8[] memory data3 = _data3;
        require(IBondStorage(bondStorageAddress).bondAddressByUniqueId(data2[6]) == address(0), "BM2");
        if (hasAnyRole(tempBondVault, BANNED_USER_ROLE())) revert IsBanned();

        uint256 nextBondIdx = IBondStorage(bondStorageAddress).nextBondIndex();
        address bondAddress = IBondFactory(bondFactory).mint(data[3], data[4], data[0], data3, tempBondVault);

        IBond(bondAddress).updateBondStructData(data2[4], data2[5], data[1]);

        IBondStorage(bondStorageAddress).setBondSecondaryData(
            bondAddress,
            data[5],
            data[6],
            data[7],
            data[8],
            data2[3],
            data2[4],
            data2[5],
            data[2],
            data2[2]
        );

        IBondStorage(bondStorageAddress).setBondAddress(data2[6], nextBondIdx, bondAddress);

        emit Minted(
            tempBondVault,
            data[3],
            data[4],
            data[5],
            data[6],
            data[7],
            data[8],
            data,
            data2,
            address(permissionsStorage)
        );
        return address(bondAddress);
    }

    // @notice this method updates the bond data which is found withing the bond smart contract
    function updateBondStructData(
        string memory _bondId,
        string memory _baseCurrency,
        string memory _ber,
        uint256 _yield
    ) public onlyRoles(GAS_STATION_ROLE()) returns (bool) {
        address bondToUpdate = IBondStorage(bondStorageAddress).bondAddressByUniqueId(_bondId);
        IBond(bondToUpdate).updateBondStructData(_baseCurrency, _ber, _yield);
        emit UpdateBondStructData(_baseCurrency, _ber, _yield);
        return true;
    }

    // @notice updates the bond data which is stored in BondStorage
    function updateBondStruct2Data(
        string memory _bondId,
        uint256 _auctionedOn,
        uint256 _maturesOn,
        uint256 _stripTotal,
        uint256 _pullToParValue,
        string memory _issuerId,
        string memory _riskOracleId,
        string memory _contractAddress,
        uint256 _poolId,
        string memory _fiatCurrency
    ) public onlyRoles(GAS_STATION_ROLE()) returns (bool) {
        address bondToUpdate = IBondStorage(bondStorageAddress).bondAddressByUniqueId(_bondId);

        IBondStorage(bondStorageAddress).setBondSecondaryData(
            bondToUpdate,
            _auctionedOn,
            _maturesOn,
            _stripTotal,
            _pullToParValue,
            _issuerId,
            _riskOracleId,
            _contractAddress,
            _poolId,
            _fiatCurrency
        );

        emit UpdateBondStruct2Data(
            _auctionedOn,
            _maturesOn,
            _stripTotal,
            _pullToParValue,
            _issuerId,
            _riskOracleId,
            _contractAddress,
            _poolId,
            _fiatCurrency
        );
        return true;
    }

    /*** =================================================  EVENTS =================================================  ***/

    event Minted(
        address tempBondVault,
        uint256 issueDate,
        uint256 maturityDays,
        uint256 auctionedOn,
        uint256 maturesOn,
        uint256 stripTotal,
        uint256 pullToParValue,
        uint256[] data,
        string[] data2,
        address permissionsStorage
    );

    event UpdateBondStructData(string baseCurrency, string ber, uint256 yield);

    event UpdateBondStruct2Data(
        uint256 auctionedOn,
        uint256 maturesOn,
        uint256 stripTotal,
        uint256 pullToParValue,
        string issuerId,
        string riskOracleId,
        string contractAddress,
        uint256 poolId,
        string _fiatCurrency
    );
}

