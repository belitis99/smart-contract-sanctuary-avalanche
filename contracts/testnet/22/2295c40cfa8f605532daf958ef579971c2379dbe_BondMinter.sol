/**
 * @title Bond
 * @notice Purpose of this smart contract Stores information about bond, its main attributes.
 */
contract Bond is IERC1404, IBond, ERC20, PermissionsStorageMember {
    struct BondStruct {
        uint256 issueDate; // The DateTime the bond is to be issued on. It may be N days in the future (max 30 days)
        uint256 maturity; //days will be changed to block number and unix block stamp with above library  = 365;;    // rewards distributed to that MonthNumber from initial Treasury assets
        uint8 schedule; // example : CUPON
        uint8 paymentFrequency; // MONTHLY or uint for number of days + 999 for MONTHLY 8888 for yearly etc ...
        uint8 bondtype; // example type = FF-SP;
        uint256 total; // The principal value of the bond
        string baseCurrency; // The base currency of this Bond, USDC, EUROC or a future CDBC
        uint8 form; // example  FIXED or FLOATING
        string ber; // example : BBB AAA
        uint256 yield; // calculated in % example = 5.20%; // display that way in view
        address treasury; // The address of the treasury wallet where the bond is custodied. For example the bond Sovereign Wallet
        uint8 status; // The state of the bond according to the bond lifecycle
    }

    BondStruct public bondData;

    constructor(
        address _tempBondVault,
        uint256 _issueDate,
        uint256 _maturityDays,
        uint256 _total,
        uint8 _schedule,
        uint8 _paymentFrequency,
        uint8 _bondType,
        uint8 _form,
        address _permissionsStorage
    ) ERC20("BOND", "BOND") PermissionsStorageMember(_permissionsStorage) {
        _mint(payable(_tempBondVault), 10);
        bondData = BondStruct(
            _issueDate,
            // solhint-disable-next-line
            block.timestamp + _maturityDays * 1 days,
            _schedule,
            _paymentFrequency,
            _bondType,
            _total,
            "-",
            _form,
            "-",
            0,
            address(0),
            14
        );
    }

    /// @dev This function is where an issuer enforces the restriction logic of token transfer.
    /// @notice required ERC-1404 implementation
    function detectTransferRestriction(address from, address to, uint256 value) public view override returns (uint8) {
        if (value == 0) return 1;
        if (to == address(0)) return 2;
        if (hasAnyRole(from, BANNED_USER_ROLE())) return 3;
        if (!hasAnyRole(from, USER_ROLE())) return 4;
        if (hasAnyRole(to, BANNED_USER_ROLE())) return 5;
        if (!hasAnyRole(to, USER_ROLE())) return 6;
        return 0;
    }

    function transfer(
        address to,
        uint256 amount
    ) public virtual override notRestricted(msg.sender, to, amount) returns (bool) {
        if (bondData.treasury == address(0)) revert AddressIsZero();
        amount = 10;
        address owner = _msgSender();
        _transfer(owner, to, amount);
        emit TransferEvent(to, amount);
        return true;
    }

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) public virtual override notRestricted(from, to, amount) returns (bool) {
        require(bondData.treasury != address(0), "B1");
        amount = 10;
        _spendAllowance(from, _msgSender(), amount);
        _transfer(from, to, amount);

        emit TransferFrom(from, to, amount);
        return true;
    }

    function messageForTransferRestriction(uint8 restrictionCode) public pure override returns (string memory) {
        if (restrictionCode == 1) return "B3";

        if (restrictionCode == 2) return "B4";

        if (restrictionCode == 3) return "B5";

        if (restrictionCode == 4) return "B6";

        if (restrictionCode == 5) return "B7";

        if (restrictionCode == 6) return "B8";

        return "B9";
    }

    function getMaturity() external view returns (uint256) {
        return bondData.maturity;
    }

    function getBaseCurrency() external view returns (string memory) {
        return bondData.baseCurrency;
    }

    function decimals() public view virtual override returns (uint8) {
        return 1;
    }

    function setStatus(uint8 _newStatus) public onlyRoles(GAS_STATION_ROLE() | ADMIN_ROLE()) returns (bool) {
        require(_newStatus >= 13 && _newStatus <= 18, "B2");
        bondData.status = _newStatus;
        emit SetStatus(_newStatus);
        return true;
    }

    function updateTreasuryAddr(address _treasuryAddr) external onlyRoles(GAS_STATION_ROLE() | ADMIN_ROLE()) {
        if (_treasuryAddr == address(0)) revert AddressIsZero();
        bondData.treasury = _treasuryAddr;
        emit UpdateTreasuryAddr(_treasuryAddr);
    }

    function updateBondStructData(
        string memory _baseCurrency,
        string memory _ber,
        uint256 _yield
    ) external onlyRoles(MINTER_BONDS_ROLE()) {
        bondData.baseCurrency = _baseCurrency;
        bondData.ber = _ber;
        bondData.yield = _yield;

        emit UpdateBondStructData(_baseCurrency, _ber, _yield);
    }

    function updateYieldValue(uint256 _yield) public onlyRoles(GAS_STATION_ROLE() | ADMIN_ROLE()) returns (uint256) {
        bondData.yield = _yield;
        return _yield;
    }

    function updateMaturity(uint256 _maturity) public onlyRoles(GAS_STATION_ROLE() | ADMIN_ROLE()) returns (uint256) {
        bondData.maturity = _maturity;
        return _maturity;
    }

    event UpdateBondStructData(string baseCurrency, string ber, uint256 yield);

    event UpdateTreasuryAddr(address treasuryAddr);

    event TransferEvent(address to, uint256 amount);

    event TransferFrom(address from, address to, uint256 amount);

    event SetStatus(uint8 newStatus);

    /* --------------------------------------------------------------- MODIFIERS ------------------------------------------------------------------------------------  */
    modifier notRestricted(
        address from,
        address to,
        uint256 amount
    ) {
        uint8 restrictionCode = detectTransferRestriction(from, to, amount);
        require(restrictionCode == 0, messageForTransferRestriction(restrictionCode));
        _;
    }
}

