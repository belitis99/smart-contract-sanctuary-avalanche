contract MINDSDynamicRewardSystem is
    Ownable,
    ChainlinkClient,
    AutomationCompatibleInterface
{
    using Chainlink for Chainlink.Request;

    BrainManagementInterface private immutable brainManagementContract;
    IAutomationRegistryInterface private immutable i_registry;

    mapping(uint256 => RewardsCoordinates) public rewardsTableNegative;
    mapping(uint256 => RewardsCoordinates) public rewardsTablePositive;

    struct RewardsCoordinates {
        int256 percentageChange;
        uint256 reward;
    }

    address private immutable registrar;

    bool public automationRunning;
    bool private requestFulFilled;

    bytes4 registerSig = KeeperRegistrarInterface.register.selector;
    bytes32 private jobId;

    int256 public performance;

    string private nameFirstUpkeep;
    string private nameSecondUpkeep;

    uint32 private gasLimitFirstUpkeep;
    uint32 private gasLimitSecondUpkeep;

    uint96 private amountFirstUpkeep;
    uint96 private amountSecondUpkeep;

    uint256 public firstUpkeepID;
    uint256 public rewardsPerSecond;
    uint256 public rewardsTableNegativeCount;
    uint256 public rewardsTablePositiveCount;
    uint256 public secondUpkeepID;
    uint256 private lastTimeStamp;
    uint256 private fee;
    uint256 private immutable interval;

    uint256[] private upkeepsToWithdraw;

