        uint256 indexed firstUpkeepID,
        uint256 indexed secondUpkeepID
    );
    event Fulfilled(
        int256 indexed performance,
        uint256 indexed rewardsPerSecond
    );
    event RequestLastPriceChange(bytes32 indexed requestID);
    event SendRewardsPerSecond(uint256 indexed rewardsPerSecond);
    event TurnedOffAutomation(
        uint256 indexed firstUpkeepID,
        uint256 indexed secondUpkeepID
    );

    error AddressIsZero();
    error AutoApproveDisabled();
    error AutomationAlreadyRunning();
    error AutomationAlreadyTurnedOff();
    error UnableToTransfer();

    modifier addressIsZero(address value) {
        if (value == address(0)) revert AddressIsZero();
        _;
    }

    constructor(
        address brainManagementContractAddress,
        address chainlinkTokenAddress,
        address chainlinkOracleAddress,
        address registrarAddress,
        address registryAddress
    )
        addressIsZero(brainManagementContractAddress)
        addressIsZero(chainlinkTokenAddress)
        addressIsZero(chainlinkOracleAddress)
        addressIsZero(registrarAddress)
        addressIsZero(registryAddress)
    {
        interval = 1 * 60 * 60 seconds; // 1hour
        lastTimeStamp = block.timestamp - interval;
        jobId = "fcf4140d696d44b687012232948bdd5d"; // GET>int256 Job ID Avalanche Testnet
        fee = (1 * LINK_DIVISIBILITY) / 10; // 0,1*10**18 LINK
        nameFirstUpkeep = "#1Automation-Update-Performance-and-Reward";
        nameSecondUpkeep = "#2Automation-Send-Rewards-per-Seconds";
        gasLimitFirstUpkeep = 1200000;
        gasLimitSecondUpkeep = 1200000;
        amountFirstUpkeep = 5 ether;
        amountSecondUpkeep = 5 ether;

        brainManagementContract = BrainManagementInterface(
            brainManagementContractAddress
        );
        setChainlinkToken(chainlinkTokenAddress);
        setChainlinkOracle(chainlinkOracleAddress);
        registrar = registrarAddress;
        i_registry = IAutomationRegistryInterface(registryAddress);
    }

    function checkUpkeep(
        bytes calldata checkData
    )
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory performData)
    {
        upkeepNeeded = false;
        if (keccak256(checkData) == keccak256(bytes(nameFirstUpkeep))) {
            upkeepNeeded = (block.timestamp - lastTimeStamp) > interval;
            performData = checkData;
            return (upkeepNeeded, performData);
        }
        if (keccak256(checkData) == keccak256(bytes(nameSecondUpkeep))) {
            upkeepNeeded = requestFulFilled;
            performData = checkData;
        }
    }

    function contractLinkBalance() external view returns (uint256 balance) {
        balance = LinkTokenInterface(chainlinkTokenAddress()).balanceOf(
            address(this)
        );
    }

    function fulfill(
        bytes32 requestId,
        int256 lastPriceChange
    ) external recordChainlinkFulfillment(requestId) {
        int256 p = limitPerformance(performance, lastPriceChange);
        performance = p;
        rewardsPerSecond = calculateRewardsPerSecond(p);
        requestFulFilled = true;
        emit Fulfilled(p, rewardsPerSecond);
    }

    function fundUpkeep(uint256 upkeepID, uint96 amount) external {
        i_registry.addFunds(upkeepID, amount);
    }

    function getUpkeepBalance(
        uint256 upkeepID
    ) external view returns (uint96 balance) {
        (, , , balance, , , , ) = i_registry.getUpkeep(upkeepID);
    }

    function initiateAutomation() external onlyOwner {
        if (automationRunning) revert AutomationAlreadyRunning();
        firstUpkeepID = _registerAndPredictID(
            nameFirstUpkeep,
            gasLimitFirstUpkeep,
            amountFirstUpkeep
        );
        secondUpkeepID = _registerAndPredictID(
            nameSecondUpkeep,
            gasLimitSecondUpkeep,
            amountSecondUpkeep
        );
        automationRunning = true;
        emit AutomationRunning(firstUpkeepID, secondUpkeepID);
    }

    function performUpkeep(bytes calldata performData) external override {
        if (keccak256(performData) == keccak256(bytes(nameFirstUpkeep))) {
            if ((block.timestamp - lastTimeStamp) > interval) {
                lastTimeStamp = block.timestamp;
                emit RequestLastPriceChange(_requestLastPriceChange());
            }
        }
        if (keccak256(performData) == keccak256(bytes(nameSecondUpkeep))) {
            if (requestFulFilled) {
                uint256 rps = rewardsPerSecond;
                brainManagementContract.setRewardsPerSecond(rps);
                requestFulFilled = false;
                emit SendRewardsPerSecond(rps);
            }
        }
    }

    function setParameters(
        address _oracle,
        string memory _jobId,
        uint256 _fee
    ) external {
        setChainlinkOracle(_oracle);
        jobId = bytes32(bytes(_jobId));
        fee = _fee;
    }

    function setRewardsCoordinates(
        int256[] calldata percentageChanges,
        uint256[] calldata rewards
    ) external onlyOwner {
        uint256 counter = percentageChanges.length;
        uint256 negativeCount;
        uint256 positiveCount;
        for (uint256 i; i < counter; ) {
            if (percentageChanges[i] < 0) {
                rewardsTableNegative[negativeCount] = RewardsCoordinates({
                    percentageChange: percentageChanges[i],
                    reward: rewards[i]
                });
                ++negativeCount;
            } else {
                rewardsTablePositive[positiveCount] = RewardsCoordinates({
                    percentageChange: percentageChanges[i],
                    reward: rewards[i]
                });
                ++positiveCount;
            }
            unchecked {
                ++i;
            }
        }
        rewardsTableNegativeCount = negativeCount;
        rewardsTablePositiveCount = positiveCount;
    }

    function turnOffAutomation() external onlyOwner {
        if (!automationRunning) revert AutomationAlreadyTurnedOff();
        uint256 fid = firstUpkeepID;
        uint256 sid = secondUpkeepID;
        firstUpkeepID = 0;
        secondUpkeepID = 0;
        cancelUpkeep(fid);
        cancelUpkeep(sid);
        automationRunning = false;
        emit TurnedOffAutomation(fid, sid);
        upkeepsToWithdraw.push(fid);
        upkeepsToWithdraw.push(sid);
    }

    function withdrawLink() external onlyOwner {
        LinkTokenInterface i_link = LinkTokenInterface(chainlinkTokenAddress());
        uint256 counter = upkeepsToWithdraw.length;
        for (uint256 i; i < counter; ) {
            _withdrawUpkeepFunds(upkeepsToWithdraw[i]);
            unchecked {
                ++i;
            }
        }
        delete upkeepsToWithdraw;
        if (!i_link.transfer(_msgSender(), i_link.balanceOf(address(this))))
            revert UnableToTransfer();
    }

    function calculateRewardsPerSecond(
        int256 _performance
    ) public view returns (uint256 rewardsPerSeconds) {
        if (_performance < 0) {
            uint256 rewardsLength = rewardsTableNegativeCount;
            //check if under min
            RewardsCoordinates memory rewardsCoordinates = rewardsTableNegative[
                0
            ];

            if (_performance <= rewardsCoordinates.percentageChange) {
                return rewardsPerSeconds = rewardsCoordinates.reward / 86400;
            }

            for (uint256 i = 1; i < rewardsLength; ) {
                //if less than the current, use the current reward
                if (_performance <= rewardsTableNegative[i].percentageChange) {
                    return
                        rewardsPerSeconds =
                            rewardsTableNegative[i].reward /
                            86400;
                }
                unchecked {
                    ++i;
                }
            }
        } else {
            uint256 rewardsLength = rewardsTablePositiveCount;
            //check if over max
            RewardsCoordinates memory rewardsCoordinates = rewardsTablePositive[
                rewardsLength - 1
            ];
            if (_performance >= rewardsCoordinates.percentageChange) {
                return rewardsPerSeconds = rewardsCoordinates.reward / 86400;
            }
            for (uint256 i = 0; i < rewardsLength - 1; ) {
                //if less than current, use the previous reward
                if (_performance <= rewardsTablePositive[i].percentageChange) {
                    return
                        rewardsPerSeconds =
                            rewardsTablePositive[i].reward /
                            86400;
                }
                unchecked {
                    ++i;
                }
            }
        }
    }

    function limitPerformance(
        int256 _performance,
        int256 _lastPriceChange
    ) public view returns (int256) {
        int256 min = rewardsTableNegative[0].percentageChange;
        int256 max = rewardsTablePositive[rewardsTablePositiveCount - 1]
            .percentageChange;

        int256 newPerformance = _performance + _lastPriceChange;

        if (newPerformance < min) {
            return min;
        } else if (newPerformance > max) {
            return max;
        } else {
            return newPerformance;
        }
    }

    function cancelUpkeep(uint256 upkeepID) public onlyOwner {
        i_registry.cancelUpkeep(upkeepID);
    }

    function _registerAndPredictID(
        string memory name,
        uint32 gasLimit,
        uint96 amount
    ) private returns (uint256 upkeepID) {
        (State memory state, , ) = i_registry.getState();
        uint256 oldNonce = state.nonce;
        bytes memory payload = abi.encode(
            name,
            "0x",
            address(this),
            gasLimit,
            address(this),
            bytes(name),
            amount,
            0,
            address(this)
        );
        LinkTokenInterface(chainlinkTokenAddress()).transferAndCall(
            registrar,
            amount,
            bytes.concat(registerSig, payload)
        );
        (state, , ) = i_registry.getState();
        if (state.nonce == oldNonce) {
            revert AutoApproveDisabled();
        }
        upkeepID = uint256(
            keccak256(
                abi.encodePacked(
                    blockhash(block.number - 1),
                    address(i_registry),
                    uint32(oldNonce)
                )
            )
        );
    }

    function _requestLastPriceChange() private returns (bytes32 requestId) {
        Chainlink.Request memory req = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfill.selector
        );
        req.add("get", "https://api.coingecko.com/api/v3/coins/biggerminds");
        req.add("path", "market_data,price_change_percentage_24h");
        req.addInt("times", 10 ** 18);
        return sendChainlinkRequest(req, fee);
    }

