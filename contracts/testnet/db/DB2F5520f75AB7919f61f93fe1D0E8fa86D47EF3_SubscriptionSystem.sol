import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract SubscriptionSystem is Ownable {

    struct Subscription {
        uint256 start;
        uint256 months;
    }

    // The address of the USDT contract
    IERC20 public usdt = IERC20(0x5425890298aed601595a70AB815c96711a31Bc65);

    // Store the price of a subscription to each provider
    mapping (string => uint256) public subscriptionCosts;

    // Mapping from subscriber's username to a second mapping,
    // which maps the provider's username to the Subscription
    mapping (string => mapping(string => Subscription)) public subscriptions;

    function setSubscriptionCost(string memory providerUsername, uint256 cost) public onlyOwner {
        subscriptionCosts[providerUsername] = cost;
    }

    function purchaseSubscription(string memory subscriberUsername, string memory providerUsername, uint256 numMonths) public {
        uint256 totalCost = subscriptionCosts[providerUsername] * numMonths;
        require(usdt.balanceOf(msg.sender) >= totalCost, "Not enough USDT");
        require(usdt.allowance(msg.sender, address(this)) >= totalCost, "Contract not approved to spend USDT");

        // Transfer the USDT from the sender to this contract
        usdt.transferFrom(msg.sender, address(this), totalCost);

        if(subscriptions[subscriberUsername][providerUsername].start == 0
            || subscriptions[subscriberUsername][providerUsername].start + subscriptions[subscriberUsername][providerUsername].months * 30 days < block.timestamp) {
            subscriptions[subscriberUsername][providerUsername] = Subscription(block.timestamp, numMonths);
        } else {
            subscriptions[subscriberUsername][providerUsername].months += numMonths;
        }
    }

    function checkSubscription(string memory subscriberUsername, string memory providerUsername) public view returns (bool) {
        if(subscriptions[subscriberUsername][providerUsername].start + subscriptions[subscriberUsername][providerUsername].months * 30 days > block.timestamp) {
            return true;
        } else {
            return false;
        }
    }

    function getSubscriptionInfo(string memory subscriberUsername, string memory providerUsername) public view returns (uint256, uint256) {
        return (subscriptions[subscriberUsername][providerUsername].start, subscriptions[subscriberUsername][providerUsername].months);
    }
}