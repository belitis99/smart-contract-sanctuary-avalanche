contract StakingRewards is ReentrancyGuard,Ownable,IERC1155Receiver {

    using SafeMath for uint256;

    // IERC20 public rewardsToken;
    ERC20 public rentToken;
    IERC1155 public stakingToken;

    // 最大质押数量
    // uint256 public poolSize = 100;
    // 当前质押数量
    uint256 public currentSize;
    uint256 public tenants;

    struct Pledge {
        uint256 amount; // 质押数量
        uint256 duration;   // 质押时长，单位为秒
        uint256 expiresAt;  // 到期时间戳
    }
    mapping(address => Pledge []) public pledges;
    mapping(address => uint256) rents;

    event PledgeEvent(address indexed from, address to, uint256 tokenId, uint256 amount, bytes data); // 质押事件
    event withDrawEvent(address indexed from, address to, uint256 tokenId, uint256 amount, bytes data);
    event Received(address operator, address from, uint256 id, uint256 value, bytes data);

    

    constructor(
        address _stakingToken,
        address _rentToken
        // address _rewardsToken
        
    )  {
        stakingToken = IERC1155(_stakingToken);
        // rewardsToken = IERC20(_rewardsToken);
        rentToken = ERC20(_rentToken);
    }

    function supportsInterface(bytes4 interfaceId) public pure override returns (bool) {
        return interfaceId == type(IERC165).interfaceId || interfaceId == type(IERC1155Receiver).interfaceId;
    }

    function onERC1155Received(address operator, address from, uint256 id, uint256 value, bytes calldata data) external override returns (bytes4) {
        emit Received(operator, from, id, value, data);
        // 返回值必须是 IERC1155Receiver 接口中定义的函数选择器
        return IERC1155Receiver.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(address operator, address from, uint256[] calldata ids, uint256[] calldata values, bytes calldata data) external override returns (bytes4) {
        emit Received(operator, from, ids[0], values[0], data);
        // 返回值必须是 IERC1155Receiver 接口中定义的函数选择器
        return IERC1155Receiver.onERC1155BatchReceived.selector;
    }

    function stake(uint256 tokenId, uint256 amount, uint256 _duration) external {
        // require(_duration == 30 days || _duration == 60 days || _duration == 90 days, "Invalid duration");
        require(_duration == 120, "Invalid duration");
        // require(currentSize + amount <= poolSize, "Pledge pool is full");

        uint256 expiresAt = block.timestamp + _duration;
        Pledge memory info = Pledge({
        amount: amount,
        duration: _duration,
        expiresAt: expiresAt
    });
        stakingToken.safeTransferFrom(msg.sender, address(this), tokenId, amount, "");
        currentSize += amount;
        pledges[msg.sender].push(info);
        

        emit PledgeEvent(msg.sender, address(this),tokenId, amount, "");
    }

    function withdraw(uint256 tokenId) public {
        uint256 total = withdrawAmount(msg.sender);
        require(total > 0, "balance is not enough to withdraw");
        Pledge[] memory records = pledges[msg.sender]; // 根据targetAddress获取结构体数组
        stakingToken.safeTransferFrom(address(this), msg.sender, tokenId, total, "");
        for (uint i = 0; i < records.length; i++) { // 遍历结构体数组
            if (block.timestamp >= records[i].expiresAt) { // 判断时间戳是否大于当前块的时间戳
                pledges[msg.sender][i].amount = 0;
             }
        }
        currentSize -= total;
        emit withDrawEvent(address(this), msg.sender,tokenId, total, "");
    }

    function withdrawAmount(address owner) public view returns (uint256) {
        uint256 total;
        Pledge[] memory records = pledges[owner];
        for (uint i = 0; i < records.length; i++) { // 遍历结构体数组
            if (block.timestamp >= records[i].expiresAt) { // 判断时间戳是否大于当前块的时间戳
                total += records[i].amount;
             }
        }
        return total;
    }

    function rent(uint256 _duration) public {
        require(tenants < currentSize, "the amount of token is not enough");
        uint256 day = _duration.div(24*60*60);
        if (_duration - day*24*60*60 != 0){
            day++;
        }
        uint256 amount = rentToken.decimals()*day*10;
        tenants++;
        rents[msg.sender] = block.timestamp + day*24*60*60;
        rentToken.transfer(address(this), amount);
    }

    function organizeCompetition() public view returns (bool) {
        if (rents[msg.sender] > block.timestamp){
            return true;
        }
        return false;
    }
}