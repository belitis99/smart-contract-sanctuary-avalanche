pragma solidity ^0.8.0;
pragma experimental ABIEncoderV2;

import "./utils/CloneFactory.sol";
import "./CloneableERC1155Delta.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/Base64.sol";

contract CloneableERC1155DeltaFactory is CloneFactory {
	using SafeMath for uint256;
	using Counters for Counters.Counter;
	enum Parents { IERC1155, IERC721, IERC20 }

	/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ S T A T E @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/
	struct Tenant {
		uint256 id;
		CloneableERC1155Delta erc1155;
	}

	// Tenant[] public tenants;	
	
	Counters.Counter public tenantCounter;
	mapping(address => Tenant[]) public tenantInstances;
	// mapping(address => bool) public instance;

	address public immutable owner;
	address private admin; 

	/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ E V E N T S @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/
	event NamespaceCreated(address indexed  _tenant, address indexed _proxy, uint indexed _parentContractType, string  model);
	
	/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ E R R O R S @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/
	error Unauthorized();
	error InterfaceNotImplemented();
	error InstanceAlreadyInitialized();
	error InstanceDoesNotExist();
	error ZeroAddress();

	/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ M O D I F I E R S @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/
	modifier isAuthorized(address _tenant) {
		if (_tenant == address(0)) {
			revert ZeroAddress();
		}
		if (!(msg.sender == _tenant || msg.sender == admin)) {
			revert Unauthorized();
		}
		_;
	}

	/*
	modifier hasAnInstance(address _tenant) {
		if (instance[_tenant]) {
			revert InstanceAlreadyInitialized();
		}
		_;
	}

	modifier hasInstances(address _tenant) {
		if (instance[_tenant]) {
			revert InstanceAlreadyInitialized();
		}
		_;
	}
	*/

	/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ C O N S T R U C T O R @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/
	constructor(address _owner) {
		owner = _owner;
		admin = msg.sender;
	}

	/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ F U N C T I O N S @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/
	/** Transaction 1 Creates a Domain**/
	function createInstance(
        string memory _uri,
		address _tenant,
		string calldata _model, 
		uint _parentContractType,
		address _parentContractAddress,
		bool _encode
	) external isAuthorized(_tenant) {
		if (_parentContractType == uint(Parents.IERC1155)) {
			CloneableERC1155Delta erc1155 = CloneableERC1155Delta(createClone(_parentContractAddress));
			erc1155.initialize(_uri, _tenant);
			address _domain = address(erc1155);
			_addTenantInstance(_tenant, erc1155);
			tenantCounter.increment();
			if (_encode) {
				emit NamespaceCreated(_tenant, _domain, _parentContractType, _encodeModel(_model));
			}
			else {
				emit NamespaceCreated(_tenant, _domain,  _parentContractType, string(abi.encodePacked('data:application/json;base64,', _model)));
			}
		}
		else if (_parentContractType == uint(Parents.IERC721)) {
			revert InterfaceNotImplemented();
		}
		else if (_parentContractType == uint(Parents.IERC20)) {
			revert InterfaceNotImplemented();
		}
		else {
			revert InterfaceNotImplemented();
		}	
	}
	
	function getProxy(address _tenant, uint256 index) public view returns (CloneableERC1155Delta) {
		return (tenantInstances[_tenant][index].erc1155);
	}
	
	function getProxies(address _tenant) public view returns (Tenant[] memory) {
		return (tenantInstances[_tenant]);
	}

	function _encodeModel(string calldata _model) private pure returns (string memory) {
        string memory encodedModel = Base64.encode(
            bytes(_model)
        );
        return string(abi.encodePacked('data:application/json;base64,', encodedModel));
    }

	function _addTenantInstance(address _tenant, CloneableERC1155Delta erc1155) private {
		Tenant[] storage tenants = tenantInstances[_tenant];
		tenants.push(Tenant(tenantInstances[_tenant].length, erc1155));
    }
}

