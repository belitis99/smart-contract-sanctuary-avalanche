        emit Transfer(sender, address(0), burnAmount);

        emit Transfer(sender, recipient, transferAmount);
        emit Transfer(sender, address(this), potAmount); // Emit separate event for the pot transfer

        _calculateNextFibonacciNumber();

        // Spin the cosmic wheel and see where the ball lands
        if (_pot > 0) {
            // Calculate the sum of difficulty, timestamp, pot amount, and the current Fibonacci number
            uint256 num = block.prevrandao + block.timestamp + potAmount + _fibonacciSequence;

            // Keep only the last 9 decimals if the number has more
            num = num % 10**9;

            if (num % _threshold1 == 0) {
                // Transfer 2x the send amount to the sender
                _transferPotToSender(msg.sender, 2*transferAmount);
            } else if (num % _threshold2 == 0) {
                // Transfer 12x the send amount to the sender
                _transferPotToSender(msg.sender, 12*transferAmount);
            } else if (num % _threshold3 == 0) {
                // Transfer 2x the send amount to the sender
                _transferPotToSender(msg.sender, 2*transferAmount);
            } else if (num % _threshold4 == 0) {
                // JACKPOT!
                // Transfer 2000x the send amount to the sender
                _transferPotToSender(msg.sender, 2000*transferAmount);
            }
        }
    }

