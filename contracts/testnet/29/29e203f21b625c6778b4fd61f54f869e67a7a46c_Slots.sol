        require(sender != address(0), "GambleToken: Sender address is zero");
        require(_pot > 0, "GambleToken: Pot balance is zero");

        uint256 potAmount = _pot;
        uint256 sendAmount = wonAmount;
        if (wonAmount > potAmount) {
            //If the win would be more than the pot, send the whole pot
            sendAmount = potAmount;
        }

        // Transfer the pot balance to the wallet that initiated the transfer
        _balances[sender] += sendAmount;
        emit PotTransferredToSender(sender, sendAmount);
    }

    function _calculateNextFibonacciNumber() internal {
        _fibonacciIndex++;
        if (_fibonacciIndex > 42) {
            _fibonacciSequence = 1;
            _fibonacciIndex = 1;
        } else if (_fibonacciIndex <= 2) {
            _fibonacciSequence = 1;
        } else {
            uint256 a = 1;
            uint256 b = 1;
            for (uint256 i = 3; i <= _fibonacciIndex; i++) {
                uint256 c = a + b;
                a = b;
                b = c;
            }
            _fibonacciSequence = b;
        }
    }
