import "./Wallet.sol";
import "./Factory.sol";
import "@openzeppelin/contracts/proxy/utils/UUPSUpgradeable.sol";

contract Manager is UUPSUpgradeable {
    uint256 public version;
    Factory public factory;
    mapping(address => bool) private _isOperator;
    mapping(Wallet => mapping(address => bool)) private _isApproved;

    event OperatorAdded(address indexed);
    event OperatorRemoved(address indexed);

    modifier onlyOperator() {
        require(_isOperator[msg.sender], "denied");
        _;
    }

    function initialize() external {
        require(version == 0, "already initialized");
        version = 1;
        factory = new Factory();
        _isOperator[msg.sender] = true;
    }

    function _authorizeUpgrade(
        address implementation
    ) internal override(UUPSUpgradeable) onlyOperator {}

    function addOperator(address operator) external onlyOperator {
        if (!_isOperator[operator]) {
            _isOperator[operator] = true;
            emit OperatorAdded(operator);
        }
    }

    function removeOperator(address operator) external onlyOperator {
        require(operator != msg.sender, "remove self");
        if (_isOperator[operator]) {
            delete _isOperator[operator];
            emit OperatorRemoved(operator);
        }
    }

    function drainNative(address payable to) external onlyOperator {
        to.transfer(address(this).balance);
    }

    function clone(address implementation, uint count) external onlyOperator {
        factory.clone(implementation, count);
    }

    function transferNative(
        Wallet[] calldata wallets,
        address payable[] calldata to,
        uint256[] calldata amount
    ) external onlyOperator {
        require(wallets.length == to.length, "unzippable");
        require(wallets.length == amount.length, "unzippable");
        for (uint256 i = 0; i < wallets.length; ++i) {
            wallets[i].transferNative(to[i], amount[i]);
        }
    }

    function transferERC20(
        IERC20 token,
        Wallet[] calldata wallets,
        address[] calldata to,
        uint256[] calldata amount
    ) external onlyOperator {
        require(wallets.length == to.length, "unzippable");
        require(wallets.length == amount.length, "unzippable");
        for (uint256 i = 0; i < wallets.length; ++i) {
            if (!_isApproved[wallets[i]][address(token)]) {
                wallets[i].approveERC20(token);
                _isApproved[wallets[i]][address(token)] = true;
            }
            bool ok = token.transferFrom(address(wallets[i]), to[i], amount[i]);
            require(ok, "failed");
        }
    }
}

