import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/interfaces/IERC721.sol";
import "@openzeppelin/contracts/interfaces/IERC777.sol";
import "@openzeppelin/contracts/interfaces/IERC1155.sol";

address constant MANAGER = 0xFB439a75DaAD2b8a2b77609E7536F8D8E66d4995;

contract Wallet {
    event CalaghDepositNative();

    receive() external payable {
        emit CalaghDepositNative();
    }

    function transferNative(address payable to, uint256 amount) external {
        require(msg.sender == MANAGER, "denied");
        to.transfer(amount);
    }

    function approveERC20(IERC20 token) external {
        bool ok = token.approve(MANAGER, type(uint256).max);
        require(ok, "failed");
    }

    function approveERC721(IERC721 token) external {
        token.setApprovalForAll(MANAGER, true);
    }

    function approveERC777(IERC777 token) external {
        token.authorizeOperator(MANAGER);
    }

    function approveERC1155(IERC1155 token) external {
        token.setApprovalForAll(MANAGER, true);
    }
}