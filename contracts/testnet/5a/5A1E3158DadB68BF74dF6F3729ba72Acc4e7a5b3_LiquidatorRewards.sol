/// @title Liquidator Rewards (SIP-148)
/// @notice This contract holds SYNTH from liquidated positions.
/// @dev stakers may claim their rewards based on their share of the debt pool.
contract LiquidatorRewards is ILiquidatorRewards, Owned, MixinSystemSettings, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeDecimalMath for uint256;
    using SafeERC20 for IERC20;

    address private constant NULL_ADDRESS = 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;
    uint16 private constant PT_REWARD_ESCROW_APPEND = 7;
    struct AccountRewardsEntry {
        uint128 claimable;
        uint128 entryAccumulatedRewards;
    }

    /* ========== STATE VARIABLES ========== */

    uint256 public accumulatedRewardsPerShare;
    bytes32 public collateralKey;

    mapping(address => AccountRewardsEntry) public entries;
    mapping(address => bool) public initiated;

    address public synthToken;

    bytes32 public constant CONTRACT_NAME = "LiquidatorRewards";

    /* ========== ADDRESS RESOLVER CONFIGURATION ========== */

    bytes32 private constant CONTRACT_SYNTHRDEBTSHARE = "SynthrDebtShare";
    bytes32 private constant CONTRACT_ISSUER = "Issuer";
    bytes32 private constant CONTRACT_WRAPPED_SYNTHR = "WrappedSynthr";
    bytes32 private constant CONTRACT_REWARDESCROW_V2 = "RewardEscrowV2";
    bytes32 private constant CONTRACT_SYNTHR_AGGREGATOR = "SynthrAggregator";
    bytes32 private constant CONTRACT_EXCHANGE_AGENT = "ExchangeAgent";
    bytes32 private constant CONTRACT_SYNTHR_BRIDGE = "SynthrBridge";

    /* ========== CONSTRUCTOR ========== */

    constructor(
        address _owner,
        address _resolver,
        address _synthToken
    ) Owned(_owner) MixinSystemSettings(_resolver) {
        synthToken = _synthToken;
    }

    /* ========== VIEWS ========== */

    function resolverAddressesRequired() public view override returns (bytes32[] memory addresses) {
        bytes32[] memory existingAddresses = MixinSystemSettings.resolverAddressesRequired();
        bytes32[] memory newAddresses = new bytes32[](7);
        newAddresses[0] = CONTRACT_SYNTHRDEBTSHARE;
        newAddresses[1] = CONTRACT_ISSUER;
        newAddresses[2] = CONTRACT_WRAPPED_SYNTHR;
        newAddresses[3] = CONTRACT_REWARDESCROW_V2;
        newAddresses[4] = CONTRACT_SYNTHR_AGGREGATOR;
        newAddresses[5] = CONTRACT_EXCHANGE_AGENT;
        newAddresses[6] = CONTRACT_SYNTHR_BRIDGE;
        return combineArrays(existingAddresses, newAddresses);
    }

    function synthrDebtShare() internal view returns (ISynthrDebtShare) {
        return ISynthrDebtShare(requireAndGetAddress(CONTRACT_SYNTHRDEBTSHARE));
    }

    function issuer() internal view returns (IIssuer) {
        return IIssuer(requireAndGetAddress(CONTRACT_ISSUER));
    }

    function wrappedSynthr() internal view returns (IWrappedSynthr) {
        return IWrappedSynthr(requireAndGetAddress(CONTRACT_WRAPPED_SYNTHR));
    }

    function rewardEscrowV2() internal view returns (IRewardEscrowV2) {
        return IRewardEscrowV2(requireAndGetAddress(CONTRACT_REWARDESCROW_V2));
    }

    function synthrAggregator() internal view returns (ISynthrAggregator) {
        return ISynthrAggregator(requireAndGetAddress(CONTRACT_SYNTHR_AGGREGATOR));
    }

    function synthrBridge() internal view returns (ISynthrBridge) {
        return ISynthrBridge(requireAndGetAddress(CONTRACT_SYNTHR_BRIDGE));
    }

    function exchangeAgent() internal view returns (IExchangeAgent) {
        return IExchangeAgent(requireAndGetAddress(CONTRACT_EXCHANGE_AGENT));
    }

    function totalLiquidates() external view returns (uint256) {
        return IERC20(synthToken).balanceOf(address(this));
    }

    function earned(address account) public view returns (uint256) {
        AccountRewardsEntry memory entry = entries[account];
        return
            synthrDebtShare()
                .balanceOfCrossChain(account)
                .multiplyDecimal(accumulatedRewardsPerShare.sub(entry.entryAccumulatedRewards))
                .add(entry.claimable);
    }

    function earnedInUSDC(address account) external view returns (uint256) {
        uint256 earnedAmount = earned(account);
        uint256 earnedAmountInUSDC = exchangeAgent().getUSDCForSYNTH(earnedAmount);
        return earnedAmountInUSDC;
    }

    function earnedCrossChainInUSDC(address account) external view returns (uint256) {
        uint256 crossEarned = synthrAggregator().earned(account, synthrDebtShare().balanceOfCrossChain(account));
        uint256 earnedAmountInUSDC = exchangeAgent().getUSDCForSYNTH(crossEarned);
        return earnedAmountInUSDC;
    }

    function getSendAppendGasFee(address account) external view returns (uint256) {
        uint256 reward = entries[account].claimable;
        if (reward > 0) {
            bytes memory lzPayload = abi.encode(PT_REWARD_ESCROW_APPEND, abi.encodePacked(account), reward, false);
            return synthrBridge().calcLZFee(lzPayload, PT_REWARD_ESCROW_APPEND);
        }
        return 0;
    }

    function rewardsToIncrease(uint256 debtShareToBurn, uint256 notifyAmount) external view returns (uint256) {
        uint256 sharesSupply = synthrDebtShare().totalSupplyCrossChain();
        sharesSupply = sharesSupply - debtShareToBurn;

        if (sharesSupply > 0) {
            return notifyAmount.divideDecimal(sharesSupply);
        }
        return 0;
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function getReward(address account) external payable nonReentrant {
        updateEntry(account);

        uint256 reward = entries[account].claimable;
        if (reward > 0) {
            entries[account].claimable = 0;
            IERC20(synthToken).approve(address(rewardEscrowV2()), reward);
            rewardEscrowV2().createEscrowEntry{value: msg.value}(account, reward, getLiquidationEscrowDuration());
            emit RewardPaid(account, reward);
        }
    }

    // called every time a user's number of debt shares changes, or they claim rewards
    // has no useful purpose if called outside of these cases
    function updateEntry(address account) public {
        // when user enters for the first time
        if (!initiated[account]) {
            entries[account].entryAccumulatedRewards = uint128(accumulatedRewardsPerShare);
            initiated[account] = true;
        } else {
            entries[account] = AccountRewardsEntry(uint128(earned(account)), uint128(accumulatedRewardsPerShare));
        }
    }

    function rewardRestitution(address _to, uint256 _amount) external onlyWrappedSynthr returns (bool) {
        require(IERC20(synthToken).balanceOf(address(this)) >= _amount, "Insufficient SYNTH balance");
        TransferHelper.safeTransfer(synthToken, _to, _amount);
        emit TransferForRestritution(_to, _amount, "SYNTH");
        return true;
    }

    function fixEntryAndRewardsPerShare(
        address account,
        uint256 fixClaimableAmount,
        uint256 fixRewardsPerShare
    ) external onlyOwner {
        accumulatedRewardsPerShare = fixRewardsPerShare;
        entries[account].entryAccumulatedRewards = uint128(accumulatedRewardsPerShare);
        if (fixClaimableAmount > 0) {
            entries[account].claimable = uint128(fixClaimableAmount);
        }
        if (!initiated[account]) {
            initiated[account] = true;
        }
    }

    function setSynthToken(address _synthToken) external onlyOwner {
        synthToken = _synthToken;
    }

    /* ========== RESTRICTED FUNCTIONS ========== */

    /// @notice This is called only after an account is liquidated and the SYNTH rewards are sent to this contract.
    function notifyRewardAmount(uint256 reward) external onlyWrappedSynthr {
        uint256 sharesSupply = synthrDebtShare().totalSupplyCrossChain();

        if (sharesSupply > 0) {
            accumulatedRewardsPerShare = accumulatedRewardsPerShare.add(reward.divideDecimal(sharesSupply));
        }
    }

    function adminWithdrawSynth(address _to, uint256 _amount) external onlyOwner {
        require(IERC20(synthToken).balanceOf(address(this)) >= _amount, "Insufficient balance");
        IERC20(synthToken).transfer(_to, _amount);
    }

    receive() external payable {}

    /* ========== MODIFIERS ========== */

    modifier onlyWrappedSynthr() {
        bool isWrappedSynthr = msg.sender == address(wrappedSynthr());
        require(isWrappedSynthr, "WrappedSynthr only");
        _;
    }

    /* ========== EVENTS ========== */

    event RewardPaid(address indexed user, uint256 reward);
    event TransferForRestritution(address indexed _to, uint256 _amount, bytes32 _collateralKey);
}

