import "@openzeppelin/contracts-upgradeable/access/AccessControlEnumerableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155BurnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155SupplyUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/StringsUpgradeable.sol";
import "./ERC1155SpokeUpgradeable.sol";

contract ERC1155POPP is
    Initializable,
    ERC1155Upgradeable,
    AccessControlEnumerableUpgradeable,
    PausableUpgradeable,
    ERC1155BurnableUpgradeable,
    ERC1155SupplyUpgradeable,
    ERC1155SpokeUpgradeable,
    UUPSUpgradeable
{
    using SafeMathUpgradeable for uint256;
    using CountersUpgradeable for CountersUpgradeable.Counter;

    bytes32 private constant VERSION = keccak256("1.0.0");

    bytes32 public constant DEPLOYER_ROLE = keccak256("DEPLOYER_ROLE");
    bytes32 public constant PLATFORM_ROLE = keccak256("PLATFORM_ROLE");

    CountersUpgradeable.Counter private _tokenPrefixCounter;
    string private _name;
    string private _symbol;
    string private _baseURI;
    address private _owner;

    uint256 private PREFIX_BASE;
    uint256 private SUFFIX_SBT;
    uint256 private SUFFIX_NFT;

    mapping(uint256 => bool) private _canTransfer;
    mapping(uint256 => uint256) private _limitPerAddress;
    mapping(uint256 => uint256) private _limitPerTokenId;
    mapping(uint256 => uint256) private _limitForUsageCount;
    mapping(bytes32 => uint256) private _usageCount;

    struct InitializeParams {
        string name;
        string symbol;
        string baseURI;
        string contractURI;
        address administrator;
        address platform;
        address[] hubs;
        address editor;
    }

    event MetadataUpdate(uint256 _tokenId);

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    /**
     *
     * @param params The parameters to initialize the contract.
     */
    function initialize(InitializeParams memory params) public initializer {
        _name = params.name;
        _symbol = params.symbol;
        __ERC1155_init("");
        __AccessControl_init();
        __Pausable_init();
        __ERC1155Burnable_init();
        __ERC1155Supply_init();
        __ERC1155Spoke_init(params.contractURI, params.hubs);
        __UUPSUpgradeable_init();
        _baseURI = params.baseURI;
        _owner = params.editor;

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(DEPLOYER_ROLE, msg.sender);
        _grantRole(DEFAULT_ADMIN_ROLE, params.administrator);
        _grantRole(DEPLOYER_ROLE, params.administrator);
        _grantRole(PLATFORM_ROLE, params.platform);

        PREFIX_BASE = 0x10000001;
        SUFFIX_SBT = 0x10000000;
        SUFFIX_NFT = 0x10000001;
    }

    /**
     * Pauses the contract, only accessible by deployer role.
     */
    function pause() public onlyRole(DEPLOYER_ROLE) {
        _pause();
    }

    /**
     * Unpauses the contract, only accessible by deployer role.
     */
    function unpause() public onlyRole(DEPLOYER_ROLE) {
        _unpause();
    }

    /**
     * Returns the name of the contract.
     * @return The name of the contract.
     */
    function name() public view returns (string memory) {
        return _name;
    }

    /**
     * Returns the symbol of the contract.
     * @return The symbol of the contract.
     */
    function symbol() public view returns (string memory) {
        return _symbol;
    }

    /**
     * @dev Returns the address of the current owner.
     */
    function owner() public view returns (address) {
        return _owner;
    }

    /**
     * Sets the owner of the contract to the specified address.
     * Actually works as an editor of the collection page only.
     * Only accessible by users with the PLATFORM_ROLE permission.
     * @param editor_ The address of the new owner.
     */
    function setOwner(address editor_) public onlyRole(PLATFORM_ROLE) {
        _owner = editor_;
    }

    /**
     * Sets the transferability of a token, only accessible by platform role.
     * @param id The ID of the token to set transferability for.
     * @param canTransfer_ The transferability flag to set.
     * @return The updated transferability flag for the given token ID.
     */
    function setCanTransfer(
        uint256 id,
        bool canTransfer_
    ) external onlyRole(PLATFORM_ROLE) returns (bool) {
        _canTransfer[id] = canTransfer_;
        return _canTransfer[id];
    }

    /**
     * Returns the prefix for the next token ID.
     * @return The prefix for the next token ID.
     */
    function tokenPrefix() public view returns (uint256) {
        return _tokenPrefixCounter.current().add(PREFIX_BASE);
    }

    /**
     * Returns the ID of a token, based on its prefix and whether it is for an SBT or NFT.
     * @param prefix The prefix of the token ID.
     * @param forSBT Boolean indicating whether the token is for an SBT or NFT.
     * @return The token ID.
     */
    function getId(uint256 prefix, bool forSBT) public view returns (uint256) {
        if (forSBT) {
            if (prefix > 0) {
                // If the prefix is greater than zero, return the token ID with the SBT suffix.
                return (prefix << 32) | SUFFIX_SBT;
            }
            // Otherwise, return the token ID with the prefix of the contract and the SBT suffix.
            return (tokenPrefix() << 32) | SUFFIX_SBT;
        } else {
            if (prefix > 0) {
                // If the prefix is greater than zero, return the token ID with the NFT suffix.
                return (prefix << 32) | SUFFIX_NFT;
            }
            // Otherwise, return the token ID with the prefix of the contract and the NFT suffix.
            return (tokenPrefix() << 32) | SUFFIX_NFT;
        }
    }

    /**
     * Returns the URI of a token, based on its ID.
     * @param id The ID of the token.
     * @return The URI of the token.
     */
    function uri(
        uint256 id
    ) public view override(ERC1155Upgradeable) returns (string memory) {
        // Convert the ID to bytes.
        bytes memory sourceBytes = bytes(StringsUpgradeable.toHexString(id));
        // Create a new bytes array with length one less than the source bytes array.
        bytes memory targetBytes = new bytes(sourceBytes.length.sub(2));

        // Copy the source bytes to the target bytes, skipping the first two characters (the "0x" prefix).
        for (uint256 i = 0; i < targetBytes.length; ) {
            targetBytes[i] = sourceBytes[i.add(2)];
            // Use unchecked to skip the overflow check for i.
            unchecked {
                ++i;
            }
        }

        // Concatenate the base URI and the target bytes to get the complete URI.
        return
            string(
                abi.encodePacked(
                    _baseURI,
                    StringsUpgradeable.toHexString(uint160(address(this)), 20),
                    "/",
                    targetBytes
                )
            );
    }

    /**
     * Computes the usage key for a given usage ID and token ID.
     *
     * @param id The ID of the token to generate a key for.
     *
     * @return The keccak256 hash of the concatenation of the caller's address, the usage ID, and the token ID.
     */
    function _usageKey(uint256 id) internal view returns (bytes32) {
        return keccak256(abi.encode(_msgSender(), id));
    }

    /**
     * Determines the remaining number of uses for a given usage ID and token ID.
     *
     * @param id The ID of the token to determine the remaining uses for.
     *
     * @return The number of remaining uses for the given usage ID and token ID.
     */
    function canUse(uint256 id) public view returns (uint256) {
        uint256 balance = balanceOf(_msgSender(), id);
        if (balance == 0) {
            return 0;
        }
        uint256 totalLimitForUsageCount = balance * _limitForUsageCount[id];
        bytes32 key = _usageKey(id);
        return totalLimitForUsageCount - _usageCount[key];
    }

    /**
     * Uses one of the available uses for a given usage ID and token ID.
     *
     * @param id The ID of the token to use the usage for.
     *
     */
    function use(uint256 id) external returns (bool) {
        bool burned = false;
        uint256 remainingUsage_ = canUse(id);
        require(
            remainingUsage_ > 0,
            "ERC1155POPP: already reached limit for usage."
        );
        if (remainingUsage_ == 1 && _canTransfer[id]) {
            _burn(_msgSender(), id, 1);
            burned = true;
        }
        bytes32 key = _usageKey(id);
        unchecked {
            ++_usageCount[key];
        }

        return burned;
    }

    /**
     * @dev Creates a new campaign by calling the create function with the given input parameters
     * @param to - The address to which tokens will be minted
     * @param sbtOnly - A flag to indicate whether to create only SBT tokens or both SBT and NFT tokens
     * @param data - Any additional data to be sent with the transaction
     */
    function createCampaign(
        address to,
        uint256 totalSupply,
        bool sbtOnly,
        bytes memory data
    ) public onlyRole(PLATFORM_ROLE) returns (uint256[2] memory) {
        uint256 idForSBT = getId(0, true);
        uint256 idForNFT = 0;
        // Create the SBT token
        _create(idForSBT, to, 1, data, false, totalSupply, 1, 1);
        // If only SBT tokens need to be created, return from the function
        if (!sbtOnly) {
            idForNFT = getId(0, false);
            _create(idForNFT, to, 1, data, true, totalSupply, 1, 1);
        }
        _tokenPrefixCounter.increment();
        return [idForSBT, idForNFT];
    }

    /**
     * @dev Mints tokens for a campaign by calling the mintOnce function with the given input parameters
     * @param to - The address to which tokens will be minted
     * @param prefix - The prefix for the ID of the token to be minted
     * @param sbtOnly - A flag to indicate whether to mint only SBT tokens or both SBT and NFT tokens
     */
    function mintOnceForCampaign(
        address to,
        uint256 prefix,
        bool sbtOnly
    ) public onlyRole(PLATFORM_ROLE) {
        // Mint the SBT token
        mintOnce(to, getId(prefix, true));
        // If only SBT tokens need to be minted, return from the function
        if (sbtOnly) {
            return;
        }
        // Mint the NFT token
        mintOnce(to, getId(prefix, false));
    }

    /**
     * @dev Creates a new ERC1155 token
     * @param id - The ID of the token to be created
     * @param to - The address to which tokens will be minted
     * @param amount - The number of tokens to be minted
     * @param data - Any additional data to be sent with the transaction
     * @param canTransfer_ - A flag to indicate whether the token can be transferred
     * @param limitPerTokenId_ - The maximum number of tokens that can be minted with the same ID
     * @param limitPerAddress_ - The maximum number of tokens that can be held by an address
     * @param limitForUsageCount_ - The maximum number of times a token can be used
     */
    function _create(
        uint256 id,
        address to,
        uint256 amount,
        bytes memory data,
        bool canTransfer_,
        uint256 limitPerTokenId_,
        uint256 limitPerAddress_,
        uint256 limitForUsageCount_
    ) internal onlyRole(PLATFORM_ROLE) {
        require(
            _limitPerAddress[id] == 0,
            "ERC1155Campaign: token has already been minted. use 'mintOnce'"
        );
        _canTransfer[id] = canTransfer_;
        _limitPerTokenId[id] = limitPerTokenId_;
        _limitPerAddress[id] = limitPerAddress_;
        _limitForUsageCount[id] = limitForUsageCount_;
        _mint(to, id, amount, data);
    }

    /**
     * Mint a single token and transfer it to the specified address.
     *
     * Requirements:
     * - The token should have been created using the `create` function.
     *
     * @param to The address to which the token will be transferred.
     * @param id The ID of the token to be minted.
     */
    function mintOnce(address to, uint256 id) public onlyRole(PLATFORM_ROLE) {
        require(
            _limitPerAddress[id] > 0,
            "ERC1155Campaign: use 'create' first."
        );
        _mint(to, id, 1, "");
    }

    /**
     * @dev Hook that is called before any token transfer. This includes minting and burning.
     *
     * @param operator The address which called `safeTransferFrom` or `safeBatchTransferFrom` function.
     * @param from The address which currently owns the token(s).
     * @param to The address which will receive the token(s).
     * @param ids An array of ids to transfer.
     * @param amounts An array of amounts of respective `ids` to be transferred.
     * @param data Additional data with no specified format, sent in call to `_safeTransferFrom`.
     *
     * Requirements:
     *
     * - `from` cannot be the zero address.
     * - If `from` is not the zero address, the sender must have either `PLATFORM_ROLE` or `_canTransfer` permission for the token `ids`.
     * - `to` cannot be the zero address.
     * - If `to` is not the zero address, `to` must have `PLATFORM_ROLE` and the balance of `ids` in `to` and `amounts` being transferred should not exceed `_limitPerAddress`.
     * - If `from` is the zero address, the total supply of `ids` being transferred should not exceed `_limitPerTokenId`.
     */
    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    )
        internal
        override(ERC1155Upgradeable, ERC1155SupplyUpgradeable)
        whenNotPaused
    {
        // Loop through all `ids`.
        for (uint256 i = 0; i < ids.length; ) {
            // Check if `from` is the zero address.
            if (from == address(0)) {
                // Check if the total supply of `ids[i]` exceeds the `_limitPerTokenId`.
                require(
                    totalSupply(ids[i]) <= _limitPerTokenId[ids[i]],
                    "ERC1155Campaign: total supply reached limit."
                );
            }
            // Check if the sender has `PLATFORM_ROLE` or `_canTransfer` permission for the token `ids[i]`, or `from` is the zero address.
            require(
                hasRole(PLATFORM_ROLE, msg.sender) ||
                    from == address(0) ||
                    _canTransfer[ids[i]],
                "ERC1155Campaign: tranfer is prohibited"
            );
            // Check if `to` has `PLATFORM_ROLE` and the balance of `ids[i]` in `to` and `amounts[i]` being transferred should not exceed `_limitPerAddress[ids[i]]`.
            require(
                to == address(0) ||
                    hasRole(PLATFORM_ROLE, to) ||
                    balanceOf(to, ids[i]) + amounts[i] <=
                    _limitPerAddress[ids[i]],
                "ERC1155Campaign: recipient got limit amount of the token"
            );
            // Increase the value of `i` by one.
            unchecked {
                ++i;
            }
        }
        // Call the parent class `_beforeTokenTransfer` function.
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    /**
     * @dev Checks whether the given operator is approved to manage all tokens of the given owner.
     * @param owner_ The address of the token owner.
     * @param operator The address of the operator.
     * @return True if the operator is approved, false otherwise.
     */
    function isApprovedForAll(
        address owner_,
        address operator
    ) public view virtual override(ERC1155Upgradeable) returns (bool) {
        // Return true if the caller has the PLATFORM_ROLE or if super.isApprovedForAll returns true
        return
            hasRole(PLATFORM_ROLE, msg.sender) ||
            super.isApprovedForAll(owner_, operator);
    }

    /**
     * @dev Authorizes the upgrade to a new implementation contract.
     * @param newImplementation The address of the new implementation contract.
     */
    function _authorizeUpgrade(
        address newImplementation
    ) internal override onlyRole(DEPLOYER_ROLE) {
        // Only the account with the DEPLOYER_ROLE can authorize an upgrade
    }

    /**
     * @dev Returns whether the contract implements a given interface.
     * @param interfaceId The interface ID to check.
     * @return True if the contract implements the interface, false otherwise.
     */
    function supportsInterface(
        bytes4 interfaceId
    )
        public
        view
        override(
            AccessControlEnumerableUpgradeable,
            ERC1155SpokeUpgradeable,
            ERC1155Upgradeable
        )
        returns (bool)
    {
        // Call super.supportsInterface to check if the contract implements the given interface
        return
            ERC1155Upgradeable.supportsInterface(interfaceId) ||
            AccessControlEnumerableUpgradeable.supportsInterface(interfaceId) ||
            ERC1155SpokeUpgradeable.supportsInterface(interfaceId);
    }

    /**
     * @dev Called when metadata for a specific token ID has been updated.
     * @param tokenId The ID of the token that has updated metadata.
     * Requirements:
     * - Only the contract owner can call this function.
     */
    function metadataUpdated(uint256 tokenId) external onlyRole(DEPLOYER_ROLE) {
        emit MetadataUpdate(tokenId);
    }

    function addHub(address hub_) external onlyRole(DEPLOYER_ROLE) {
        _addHub(hub_);
    }

    function removeHub(address hub_) external onlyRole(DEPLOYER_ROLE) {
        _removeHub(hub_);
    }

    /**
     * @dev Hook that is called after any token transfer. This includes minting
     * and burning, as well as batched variants.
     *
     * The same hook is called on both single and batched variants. For single
     * transfers, the length of the `id` and `amount` arrays will be 1.
     *
     * Calling conditions (for each `id` and `amount` pair):
     *
     * - When `from` and `to` are both non-zero, `amount` of ``from``'s tokens
     * of token type `id` will be  transferred to `to`.
     * - When `from` is zero, `amount` tokens of token type `id` will be minted
     * for `to`.
     * - when `to` is zero, `amount` of ``from``'s tokens of token type `id`
     * will be burned.
     * - `from` and `to` are never both zero.
     * - `ids` and `amounts` have the same, non-zero length.
     *
     * To learn more about hooks, head to xref:ROOT:extending-contracts.adoc#using-hooks[Using Hooks].
     */
    function _afterTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal virtual override(ERC1155SpokeUpgradeable, ERC1155Upgradeable) {
        ERC1155SpokeUpgradeable._afterTokenTransfer(
            operator,
            from,
            to,
            ids,
            amounts,
            data
        );
    }
}