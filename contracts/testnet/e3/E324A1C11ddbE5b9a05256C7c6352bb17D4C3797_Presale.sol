pragma solidity ^0.8.0;

import "./IERC20.sol";
import "./Ownable.sol";
import "./Pausable.sol";
import "./SafeMath.sol";

contract Presale is Ownable, Pausable {
    using SafeMath for uint256;

    IERC20 public token;
    uint256 public presaleStartTime;
    uint256 public presaleEndTime;
    uint256 public claimStartTime;
    uint256 public hardCap;
    uint256 public totalTokensSold;
    uint256 public totalEtherReceived;
    uint256 public minPurchase;
    uint256 public maxPurchase;
    bool public presaleEnded;
    mapping(address => uint256) public tokensPurchased;

    // Dynamic pricing mechanism
    uint256 public baseRate;
    uint256 public rateIncrement;
    uint256 public rateDecrementInterval;

    event TokensPurchased(address indexed buyer, uint256 tokens);
    event PresaleExtended(uint256 newEndTime);
    event PresalePaused(uint256 pauseTime);
    event PresaleUnpaused(uint256 unpauseTime);

    constructor(
        address _token,
        uint256 _presaleDuration,
        uint256 _claimDelay,
        uint256 _hardCap,
        uint256 _minPurchase,
        uint256 _maxPurchase,
        uint256 _baseRate,
        uint256 _rateIncrement,
        uint256 _rateDecrementInterval
    ) {
        require(_token != address(0), "Invalid token address");
        token = IERC20(_token);
        presaleStartTime = block.timestamp;
        presaleEndTime = presaleStartTime.add(_presaleDuration);
        claimStartTime = presaleEndTime.add(_claimDelay);
        hardCap = _hardCap;
        minPurchase = _minPurchase;
        maxPurchase = _maxPurchase;
        baseRate = _baseRate;
        rateIncrement = _rateIncrement;
        rateDecrementInterval = _rateDecrementInterval;
    }

    function buyTokens() external payable whenNotPaused {
        require(block.timestamp >= presaleStartTime, "Presale not started");
        require(block.timestamp < presaleEndTime, "Presale ended");
        require(msg.value >= minPurchase, "Insufficient ETH amount");
        require(msg.value <= maxPurchase, "ETH amount exceeds limit");

        uint256 tokens = calculateTokenAmount(msg.value);
        require(totalTokensSold.add(tokens) <= hardCap, "Hard cap reached");

        totalEtherReceived = totalEtherReceived.add(msg.value);
        totalTokensSold = totalTokensSold.add(tokens);
        tokensPurchased[msg.sender] = tokensPurchased[msg.sender].add(tokens);

        emit TokensPurchased(msg.sender, tokens);
    }

    function claimTokens() external {
        require(block.timestamp >= claimStartTime, "Claim period not started");
        require(tokensPurchased[msg.sender] > 0, "No tokens to claim");

        uint256 tokens = tokensPurchased[msg.sender];
        tokensPurchased[msg.sender] = 0;
        require(token.transfer(msg.sender, tokens), "Token transfer failed");
    }

    function calculateTokenAmount(uint256 etherAmount)
        public
        view
        returns (uint256)
    {
        uint256 elapsedTime = block.timestamp.sub(presaleStartTime);
        uint256 rate = baseRate.add(
            elapsedTime.div(rateDecrementInterval).mul(rateIncrement)
        );

        return etherAmount.mul(rate);
    }

    function extendPresale(uint256 newEndTime) external onlyOwner {
        require(newEndTime > presaleEndTime, "Invalid new end time");
        presaleEndTime = newEndTime;
        claimStartTime = presaleEndTime.add(72 hours);
        emit PresaleExtended(newEndTime);
    }

    function pausePresale() external onlyOwner whenNotPaused {
        _pause();
        emit PresalePaused(block.timestamp);
    }

    function unpausePresale() external onlyOwner whenPaused {
        _unpause();
        emit PresaleUnpaused(block.timestamp);
    }

    function withdrawEther() external onlyOwner {
        require(presaleEnded, "Presale not ended");
        (bool success, ) = owner().call{value: address(this).balance}("");
        require(success, "Withdraw failed");
    }

    function endPresale() external onlyOwner {
        require(!presaleEnded, "Presale already ended");
        require(block.timestamp > presaleEndTime, "Presale is still active");
        presaleEnded = true;
    }
     function withdrawUnsoldTokens() external onlyOwner {
        require(presaleEnded, "Presale is not closed");

        uint256 unsoldTokens = token.balanceOf(address(this));
       token.transferFrom(address(this), owner(), unsoldTokens);
     }
}

