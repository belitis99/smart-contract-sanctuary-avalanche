 contract TestLock is Ownable {

    struct Lock {
        address user;
        uint256 amountLocked;
        uint256 amountReceived;
        uint256 nonce;
        uint256[] networkFees;
        bool wantETH;
        bool processed;
    }
    using SafeMath for uint256;
    mapping(address => Lock) public lockedByUser;
    mapping(uint256 => Lock) public lockedByNonce;
    address public router;
    address public networkToken;
    address public token;
    uint256 public nonce;

    constructor() {
       nonce = 0;
    }
    
    event Received(address, uint);
    event Locked(address, uint256);

    receive() external payable {
        emit Received(msg.sender, msg.value);
    }
    
    function withdrawAVAX() external onlyOwner() {
        payable(msg.sender).transfer(address(this).balance);
    }

    function getLockByNonce(uint256 _nonce) external view returns  (Lock memory){
        return lockedByNonce[_nonce];
    }

    function withdrawTokens(address _token) external onlyOwner {
        uint256 tokenAmount = IERC20(_token).balanceOf(address(this));
        IERC20(_token).transfer(msg.sender, tokenAmount);
    }

    function lockTokens() external {
        require(lockedByUser[msg.sender].amountLocked == 0, "You have already locked");
        uint256 balanceContractBefore = IERC20(token).balanceOf(address(this));
        uint256 balanceUser = IERC20(token).balanceOf(msg.sender);
        IERC20(token).transferFrom(msg.sender, address(this), balanceUser);
        uint256 balanceContractAfter = IERC20(token).balanceOf(address(this));
        uint256 amountReceived = balanceContractAfter.sub(balanceContractBefore);
        uint256[] memory fees = new uint256[](2);
        lockedByUser[msg.sender] = Lock({
            user: msg.sender,
            amountLocked: balanceUser,
            amountReceived: amountReceived,
            nonce: nonce,
            networkFees: fees,
            wantETH: false,
            processed: false
        });
        lockedByNonce[nonce] = Lock({
            user: msg.sender,
            amountLocked: balanceUser,
            amountReceived: amountReceived,
            nonce: nonce,
            networkFees: fees,
            wantETH: false,
            processed: false
        });
        nonce++;
    }

    function lockTokensPayable() external payable{
        require(lockedByUser[msg.sender].amountLocked == 0, "You have already locked");
        require(msg.value < 5*10**18, "5 AVAX max");
        uint256 balanceContractTokensBefore = IERC20(token).balanceOf(address(this));
        uint256 balanceUser = IERC20(token).balanceOf(msg.sender);
        IERC20(token).transferFrom(msg.sender, address(this), balanceUser);
        uint256 balanceContractTokensAfter = IERC20(token).balanceOf(address(this));
        uint256 amountReceived = balanceContractTokensAfter.sub(balanceContractTokensBefore);
        uint256[] memory fees = new uint256[](2);
        address[] memory path = new address[](2);
        path[0] = IRouter(router).WAVAX();
        path[1] = networkToken;
        fees = IRouter(router).swapExactAVAXForTokens{value : msg.value}(0, path, address(this), block.timestamp);
        lockedByUser[msg.sender] = Lock({
            user: msg.sender,
            amountLocked: balanceUser,
            amountReceived: amountReceived,
            nonce: nonce,
            networkFees: fees,
            wantETH: false,
            processed: false
        });
        lockedByNonce[nonce] = Lock({
            user: msg.sender,
            amountLocked: balanceUser,
            amountReceived: amountReceived,
            nonce: nonce,
            networkFees: fees,
            wantETH: false,
            processed: false
        });
        nonce++;
    }
    function setRouterAndNetworkToken(address _networkToken, address _router) external onlyOwner {
        router = _router;
        networkToken = _networkToken;

    }
    function updateProcessed(uint256 _nonce) external onlyOwner {
        lockedByNonce[_nonce].processed = true;
    }

    function unlockTokens(address user) external onlyOwner {
        require(lockedByUser[msg.sender].processed == true, "transfer not processed yet");
        Lock memory unlock = lockedByUser[user];
        lockedByUser[user].amountLocked = 0;
        lockedByUser[user].amountReceived = 0;
        IERC20(token).transfer(unlock.user, unlock.amountReceived);
    }

    function setToken(address _token) external onlyOwner {
        token = _token;
    }


    
}